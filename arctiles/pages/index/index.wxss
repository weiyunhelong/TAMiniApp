/* arctiles/pages/index/index.wxss */

page {
  background-color: #fff;
}

/*顶层的部分*/

.topv {
  background-repeat: no-repeat;
  background-size: cover;
  width: 100%;
  height: 600rpx;
}

.typev {
  width: 100rpx;
  height: 40rpx;
  color: #fff;
  border: 1rpx solid #fff;
  font-size: 22rpx;
  float: right;
  margin: 30rpx;
  text-align: center;
  line-height: 40rpx;
  border-radius: 20rpx;
}

/*内容部分*/

.introv {
  padding-top: 420rpx;
  width: 100%;
  height: 100rpx;
}

.leftinfo {
  padding-left: 30rpx;
  height: 100rpx;
}

.enname {
  color: #fff;
  font-size: 20rpx;
}

.cnname {
  color: #fff;
  font-size: 30rpx;
  font-weight: 600;
}

.xingv {
  display: flex;
}

.xingico {
  width: 40rpx;
  height: 40rpx;
}

.rightinfo {
  float: right;
  margin-right: 20rpx;
}

.rightico {
  width: 60rpx;
  height: 60rpx;
  margin-right: 30rpx;
}

/*图片介绍部分*/

.basetxt {
  width: 94%;
  height: 60rpx;
  margin: 0 3%;
  font-size: 30rpx;
  font-weight: 600;
  line-height: 60rpx;
}

.baseinfo {
  width: 94%;
  height: auto;
  margin: 0 3%;
  font-size: 28rpx;
}

.moretxt {
  float: right;
  margin-top: -35rpx;
  color: #00cf00;
}

.hangv{
  clear: both;  
   width: 94%;
  height: 80rpx;
  margin: 0 3%;
  display: flex;
  line-height: 80rpx;
}
.titlev{
  font-weight: 600;
  font-size: 30rpx;
  margin-right: 50rpx;
}

.infotxt{
  font-size: 30rpx;  
  width:82%; 
}

/*底部的按钮*/
.bottomv{
  width: 100%;
  height:100rpx;
  background-color:#009CE9; 
  display: flex;
  position: fixed;
  bottom: 0;
  left: 0;
}

.btnv{
  width: 374rpx;
  height: 100rpx;
  display: flex;
  justify-content: center;  
}

.btnico{
  width:40rpx;
height:40rpx;
margin:30rpx 10rpx;
}
.btntxt{
