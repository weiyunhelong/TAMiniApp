<!--pages/test/index.wxml-->
<block wx:for="{{datalist}}" wx:key="item" wx:for-index="x">

  <!--轮播图部分-->
  <swiper style="height: 438rpx;" class="swiper-box" receiveData='{{item.detail}}' wx:if="{{x>0&&item.component_id==1}}"/>

  <!--menu部分-->
  <menu receiveData='{{item.detail}}' wx:if="{{x>0&&item.component_id==1}}"/>

  <!--标志景点部分-->
  <module receiveData='{{item.detail}}' wx:if="{{x>0&&item.component_id==1}}"/>

  <!--留白行-->
  <view class='geduanv' style='height:{{item.detail.attr[0]}};' wx:if="{{x>0&&item.component_id==4}}"></view>

  <!--游玩指南-->
  <guide receiveData='{{item.detail}}' id="guide" bindshowChange="showChange" wx:if="{{x>0&&item.component_id==7}}"/>

</block>
<!--分段结束-->

<!--到达顶部-->
<image src='/resources/icon/zhiding.png' class='goTop' hidden='{{!floorstatus}}' bindtap="goTop" style='display:none;'></image>