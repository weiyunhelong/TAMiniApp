/* pages/article/index.wxss */

page {
  background-color: #fff;
}

/*顶层的部分*/

.topv {
  background-repeat: no-repeat;
  background-size: cover;
  width: 100%;
  height: 500rpx;
}

.topinfov {
  margin-top: -500rpx;
  background: linear-gradient(360deg, rgba(0, 0, 0, 0) 0%, rgba(0, 30, 52, 1) 100%);
  /*opacity: 0.5;*/
}

.typev {
  height: 50rpx;
  float: right;
  margin: 50rpx 42rpx;
  line-height: 50rpx;
}

.xinicon {
  width: 38rpx;
  height: 36rpx;
}

/*类型值部分*/
.wenzhangtype {
  width: 76rpx;
  height: 36rpx;
  color: #fff;
  text-align: center;
  line-height: 36rpx;
  float: left;
  border-top-right-radius: 6rpx;
  border-bottom-right-radius: 6rpx;
  margin-top: 50rpx;
}

/*标题文字*/

.titlev {
  width: 710rpx;
  color: #16191c;
  font-size: 48rpx;
  margin: 420rpx 20rpx 20rpx 20rpx;
  word-wrap: break-word;
  white-space: normal;
}

/*收藏浏览*/

.otherv {
  display: flex;
  color: #909599;
  padding-left: 20rpx;
}

.shoucangv {
  margin-right: 20rpx;
  margin-left: 40rpx;
}

.instrov {
  margin: 40rpx 40rpx 40rpx 40rpx;
  width: 670rpx;
}

.instrov rich-text {
  width: 670rpx;
  white-space: normal;
}

.instrov rich-text img {
  float: left;
}
