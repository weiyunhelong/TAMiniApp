<!--pages/termini/index.wxml-->
<view style='background-image: url("/resources/tu1.jpg");' class='baseinfo'>
  <!--搜索地图层-->
  <view class='topv'>
    <view class='searchinfov'>
      <icon type='search' size='15' color='#cccccc' class='searchicon'></icon>
      <input type='text' class='searchtxt' placeholder='搜索' placeholder-class='searchtip' value="{{searchtxt}}" bindblur='getsearch' bindconfirm='getsearch'></input>
    </view>
    <view class='mapv' bindtap='gomap'>
      <image src='/resources/diqiu.png' class='topmapico'></image>
    </view>
  </view>

  <!--地址天气层-->
  <view class='twov'>
    <view class='dizhiv' bindtap='gocity'>
      <view class='zhoutxt'>大洋洲</view>
      <view class='citytxt'>
        <view>悉尼</view>
        <image src='/resources/weizhi.png' class='postionico'></image>
      </view>
      <view class='encity'>Sydney</view>
    </view>
    <view class='weatherv'  catchtap='goweather'>
      <image src='/resources/sun.png' class='weatherico'></image>
    </view>
  </view>
</view>

<view class='geduanv'></view>

<!--景点推荐-->
<view class='scenev'>
  <view class='titlev'>
    <view class='titletxt'>景点推荐</view>
    <view class="moretxt">探索更多></view>
  </view>
  <!--滑动部分-->
  <scroll-view scroll-x="true" class="tab-s">
    <block wx:for="{{scenelist}}" wx:key="item" wx:for-index="x">
      <view class="tabsitem" data-current="{{x}}" data-id="{{item.id}}" bindtap="sceneswitchNav">
        <image src='{{item.imgpath}}' class='scenetu'></image>
        <view class="scenetxt">{{item.name}}</view>
      </view>
    </block>
  </scroll-view>
</view>

<!--购物-->
<view class='scenev'>
  <view class='titlev'>
    <view class='titletxt'>购物</view>
    <view class="moretxt">探索更多></view>
  </view>
  <!--滑动部分-->
  <scroll-view scroll-x="true" class="tab-s">
    <block wx:for="{{scenelist}}" wx:key="item" wx:for-index="x">
      <view class="tabsitem" data-current="{{x}}" data-id="{{item.id}}" bindtap="sceneswitchNav">
        <image src='{{item.imgpath}}' class='scenetu'></image>
        <view class="scenetxt">{{item.name}}</view>
      </view>
    </block>
  </scroll-view>
</view>


<!--美食层-->
<view class='foodv'>
  <view class='titlev'>
    <view class='titletxt'>美食</view>
    <view class="moretxt">探索更多></view>
  </view>
  <!--滑动部分-->
  <scroll-view scroll-x="true" class="tab-f">
    <block wx:for="{{scenelist}}" wx:key="item" wx:for-index="x">
      <view class="tabfitem" data-current="{{x}}" data-id="{{item.id}}" bindtap="sceneswitchNav">
        <image src='{{item.imgpath}}' class='scenetu'></image>
        <view class="foodtxt">{{item.name}}</view>
        <view class="foodtype">亚洲料理，泰国菜</view>
      </view>
    </block>
  </scroll-view>
</view>

<!--酒店层-->
<view class='hotelv'>
  <view class='titlev'>
    <view class='titletxt'>酒店</view>
    <view class="moretxt">探索更多></view>
  </view>
  <!--滑动部分-->
  <scroll-view scroll-x="true" class="tab-hotel">
    <block wx:for="{{scenelist}}" wx:key="item" wx:for-index="x">
      <view class="tabhitem" data-current="{{x}}" data-id="{{item.id}}" bindtap="sceneswitchNav">
        <image src='{{item.imgpath}}' class='scenetu'></image>
        <view class="hoteltxt">{{item.name}}</view>
        <view class="hoteltip">￥993起</view>
      </view>
    </block>
  </scroll-view>
</view>

<!--地图指引-->
<view class='ditumapv'>
  <view class='titlev'>
    <view class='titletxt'>地图指引</view>
    <view class="moretxt">探索更多></view>
  </view>
  <map id="map" longitude="113.324520" latitude="23.099994" scale="14"  class='ditumap'></map>
  <view class='mapiconv'>
   <view class='mapicoceng'>
     <image src='/resources/sceneico.png' class='mapico'></image>
     <view class='mapicotxt'>景点</view>
   </view>
    <view class='mapicoceng'>
     <image src='/resources/shopico.png' class='mapico'></image>
     <view class='mapicotxt'>购物</view>
   </view>
    <view class='mapicoceng'>
     <image src='/resources/foodico.png' class='mapico'></image>
     <view class='mapicotxt'>美食</view>
   </view>
    <view class='mapicoceng'>
     <image src='/resources/hotelico.png' class='mapico'></image>
     <view class='mapicotxt'>酒店</view>
   </view>
  </view>
</view>

<!--游记层-->
<view class='youjiv'>
  <view class='titlev'>
    <view class='titletxt'>游记</view>
    <view class="moretxt">探索更多></view>
  </view>
  <!--滑动部分-->
  <scroll-view scroll-x="true" class="tab-youjiv">
    <block wx:for="{{tourlist}}" wx:key="item" wx:for-index="x">
      <view class="tabyitem" data-current="{{x}}" data-id="{{item.id}}" bindtap="sceneswitchNav">

        <block wx:for="{{item.imglist}}" wx:key="yitem" wx:for-index="y" wx:for-item="yitem">
          <image src='{{yitem}}' class='tourbigtu' wx:if="{{y==0}}"></image>
          <image src='{{yitem}}' class='tourtu' wx:else></image>
        </block>
        <view class='tourtxt'>{{item.name}}</view>

      </view>
    </block>
  </scroll-view>

</view>


<!--攻略层-->
<view class='gonglvev'>
  <view class='titlev'>
    <view class='titletxt'>攻略</view>
    <view class="moretxt">探索更多></view>
  </view>
   <!--滑动部分-->
  <scroll-view scroll-x="true" class="tab-gl">
    <block wx:for="{{scenelist}}" wx:key="item" wx:for-index="x">
      <view class="tabglitem" data-current="{{x}}" data-id="{{item.id}}" bindtap="sceneswitchNav">
        <view class='infov'>
          <view class='infotitle'>皮特街购物中心超实用购物解读！</view>
          <view class='infotxt'>平时玩手机是不难发现,生活在澳村的红薯们时不时就会吐槽一番澳大利亚“地方人稀”,顺带PO了</view>
          <view class='infomore'>阅读更多</view>
        </view>
        <image src='{{item.imgpath}}' class='gletu'></image>
      </view>
    </block>
  </scroll-view>
</view>

<!--线路层-->
<view class='xianluv'>
   <view class='titlev'>
    <view class='titletxt'>线路</view>
    <view class="moretxt">探索更多></view>
  </view>
   <!--滑动部分-->
  <scroll-view scroll-x="true" class="tab-xl">
    <block wx:for="{{scenelist}}" wx:key="item" wx:for-index="x">
      <view class="tabglitem" data-current="{{x}}" data-id="{{item.id}}" bindtap="sceneswitchNav">       
        <image src='{{item.imgpath}}' class='gletu'></image>
