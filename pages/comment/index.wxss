/* pages/comment/index.wxss */

page {
  background-color: #fff;
}

.xingv {
  width: 100%;
  height: 108rpx;
  display: flex;
  border-top: 1rpx solid #f2f2f2;
  border-bottom: 1rpx solid #f2f2f2;
}

.xingtitle {
  height: 108rpx;
  line-height: 108rpx;
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
  margin-left: 30rpx;
  margin-right: 25rpx;
}

.xinginfo {
  display: flex;
  padding-top: 36rpx;
}

.xingico {
  width: 36rpx;
  height: 36rpx;
  margin-right: 18rpx;
}

/*内容部分*/

.commentv {
  padding-top: 46rpx;
  height: 358rpx;
  border-bottom: 1rpx solid #e5e5e9;
}

.tipcss {
  font-size: 28rpx;
  color: #b2b2b2;
}

.txtcss {
  width: 690rpx;
  height: 358rpx;
  margin: 0 30rpx;
  font-size: 28rpx;
  color: #16191c;
}

/*按钮部分*/

.btnv {
  margin-top: 70rpx;
  text-align: center;
  display: flex;
  justify-content: center;
}

.publishbtn {
  width: 197rpx;
  height: 67rpx;
  background: #0074c8;
  border-radius: 43rpx;
  color: #fff;
  font-size: 28rpx;
  text-align: center;
  line-height: 67rpx;
}

.tiptxt {
  text-align: right;
  font-size: 20rpx;
  color: #b2b2b2;
  margin-right: 30rpx;
  margin-top: -50rpx;
}
