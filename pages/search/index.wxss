/* pages/search/index.wxss */

page {
  background-color: #fff;
}

/*搜索层*/

.searchv {
  width: 96%;
  height: 80rpx;
  margin: 25rpx 2%;
  display: flex;
  justify-content: flex-start;
}

.searchview {
  width: 90%;
  height: 80rpx;
  background-color: #fff;
  border-radius: 40rpx;
  display: flex;
  justify-content: flex-start;
}

.searchborder {
  border: 1rpx solid #0074c8;
  box-sizing: content-box;
}

.searchicon {
  margin: 25rpx 15rpx;
}

.txtcss {
  width: 83%;
  height: 80rpx;
  font-size: 25rpx;
  line-height: 80rpx;
  padding-left: 5%;
}

.ftxtcss {
  width: 83%;
  height: 80rpx;
  font-size: 25rpx;
  line-height: 80rpx;
  padding-left: 5%;
}

.clearicon {
  margin: 25rpx 15rpx;
}

.cleartxt {
  width: 15%;
  font-size: 35rpx;
  text-align: center;
  line-height: 90rpx;
}

/*菜单部分*/

.tab-h {
  height: 80rpx;
  width: 100%;
  overflow: hidden;
  font-size: 30rpx;
  white-space: nowrap;
  margin-top: 10rpx;
  background-color: #fff;
  box-shadow: 2rpx 2rpx 2px #e5e5e9;
}

/*菜单*/

.tabitem {
  width: 120rpx;
  text-align: center;
  height: 80rpx;
  margin: 0rpx 15rpx;
  display: inline-block;
}

/*选中的菜单*/

.chktabitem {
  text-align: center;
  height: 77rpx;
  display: inline-block;
  border-bottom: 5rpx solid #0074c8;
  color: #0074c8;
  font-weight: 600;
  box-sizing: content-box;
  font-size: 28rpx;
  line-height: 80rpx;
}

/*未选中的菜单*/

.nochktabitem {
  text-align: center;
  margin: 0 15rpx;
  height: 80rpx;
  line-height: 80rpx;
  color: #909599;
  display: inline-block;
  font-size: 28rpx;
}

/*历史记录*/

.historyv {
  width: 100%;
  height: 100rpx;
  background-color: #fff;
  margin-top: 20rpx;
  display: flex;
  justify-content: space-between;
  line-height: 100rpx;
}

.titlev {
  margin-left: 30rpx;
  font-size: 32rpx;
  font-weight: 600;
}

.clearv {
  font-size: 24rpx;
  margin-right: 30rpx;
  color: #909599;
}

.historylist {
  width: 94%;
  margin: 0 3%;
  display: flex;
  flex-wrap: wrap;
}

.historyitem {
  padding: 0 30rpx;
  border-radius: 30rpx;
  font-size: 24rpx;
  line-height: 60rpx;
  background-color: #e5e5e9;
  color: #0074c8;
  margin-right: 20rpx;
  margin-top: 20rpx;
}

/*热门搜索*/

.hotsearchv {
  width: 100%;
  height: 100rpx;
  background-color: #fff;
  margin-top: 20rpx;
  display: flex;
  justify-content: space-between;
  line-height: 100rpx;
}

.hotsearchlist {
  width: 94%;
  margin: 0 3%;
  display: flex;
  flex-wrap: wrap;
}

.hotsearchitem {
  padding: 0 30rpx;
  border-radius: 30rpx;
  font-size: 24rpx;
  line-height: 60rpx;
  background-color: #e5e5e9;
  color: #0074c8;
  margin-right: 20rpx;
  margin-top: 20rpx;
}

.hotsearchhitem {
  padding: 0 30rpx;
  border-radius: 30rpx;
  font-size: 24rpx;
  line-height: 60rpx;
  background-color: #0074c8;
  color: #fff;
  margin-right: 20rpx;
  margin-top: 20rpx;
}
