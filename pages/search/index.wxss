/* pages/search/index.wxss */

page {
  background-color: #fff;
}

/*顶部搜索部分*/

.topv {
  width: 100%;
  height: 250rpx;
  background-color: #fff;
  position: fixed;
  left: 0;
  top: 0;
  z-index: 2;
}

/*搜索层*/

.searchv {
  width: 94%;
  height: 68rpx;
  margin: 42rpx 3% 25rpx 3%;
  display: flex;
  justify-content: flex-start;
}

.searchview {
  width: 90%;
  height: 68rpx;
  background-color: #fff;
  border-radius: 40rpx;
  display: flex;
  justify-content: flex-start;
}

.searchhborder {
  border: 1rpx solid #0074c8;
  box-sizing: content-box;
}

.searchborder {
  border: 1rpx solid #b2b2b2;
  box-sizing: content-box;
}

.searchicon {
  margin: 15rpx 10rpx;
}

.txtcss {
  width: 83%;
  height: 68rpx;
  font-size: 26rpx;
  line-height: 68rpx;
  padding-left: 5%;
}

.tipcss {
  color: #b2b2b2;
  font-size: 26rpx;
}

.ftxtcss {
  width: 83%;
  height: 68rpx;
  font-size: 25rpx;
  line-height: 68rpx;
  padding-left: 5%;
}

.clearicon {
  margin: 15rpx 15rpx;
}

.cleartxt {
  width: 15%;
  font-size: 26rpx;
  text-align: center;
  line-height: 80rpx;
}

/*菜单部分*/

.tab-h {
  height: 80rpx;
  width: 100%;
  overflow: hidden;
  white-space: nowrap;
  margin-top: 52rpx;
  background-color: #fff;
}

/*菜单*/

.tabitem {
  width: 120rpx;
  text-align: center;
  height: 80rpx;
  margin: 0rpx 15rpx;
  display: inline-block;
}

/*选中的菜单*/

.chktabitem {
  text-align: center;
  height: 77rpx;
  display: inline-block;
  border-bottom: 5rpx solid #0074c8;
  color: #0074c8;
  font-weight: bold;
  box-sizing: content-box;
  font-size: 28rpx;
  line-height: 80rpx;
}

/*未选中的菜单*/

.nochktabitem {
  text-align: center;
  margin: 0 15rpx;
  height: 80rpx;
  line-height: 80rpx;
  color: #16191C;
  display: inline-block;
  font-size: 28rpx;
}

.shadowv {
  width: 100%;
  height: 20rpx;
  background: linear-gradient(180deg, rgba(216, 216, 216, 1), rgba(238, 238, 238, 0));
  opacity: 0.8;
}

.shaovb {
  width: 100%;
  height: 2rpx;
  margin-top: -50rpx;
}

/*历史记录*/

.historyv {
  width: 100%;
  height: 100rpx;
  background-color: #fff;
  margin-top: 20rpx;
  display: flex;
  justify-content: space-between;
  line-height: 100rpx;
}

.titlev {
  margin-left: 30rpx;
  font-size: 32rpx;
  font-weight: bold;
  color: #16191c;
}

.clearv {
  font-size: 24rpx;
  margin-right: 30rpx;
  color: #909599;
}

.historylist {
  width: 94%;
  margin: 0 3%;
  display: flex;
  flex-wrap: wrap;
}

.historyitem {
  padding: 0 30rpx;
  border-radius: 30rpx;
  font-size: 28rpx;
  line-height: 68rpx;
  background-color: #f4f4f4;
  color: #0074c8;
  margin-right: 30rpx;
  margin-top: 20rpx;
}

/*热门搜索*/

.hotsearchv {
  width: 100%;
  height: 100rpx;
  background-color: #fff;
  margin-top: 20rpx;
  display: flex;
  justify-content: space-between;
  line-height: 100rpx;
}

.hotsearchlist {
  width: 94%;
  margin: 0 3%;
  display: flex;
  flex-wrap: wrap;
}

.hotsearchitem {
  padding: 0 30rpx;
  border-radius: 30rpx;
  font-size: 28rpx;
  line-height: 68rpx;
  background-color: #f4f4f4;
  color: #0074c8;
  margin-right: 30rpx;
  margin-top: 20rpx;
}

.hotsearchhitem {
  padding: 0 30rpx;
  border-radius: 30rpx;
  font-size: 28rpx;
  line-height: 68rpx;
  background-color: #0074c8;
  color: #fff;
  margin-right: 30rpx;
  margin-top: 20rpx;
}
