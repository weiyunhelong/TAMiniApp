/*菜单行*/
.menutabv {
  margin: 0 20rpx;
  min-height: 170rpx;
  height: auto;
  display: flex;
  flex-wrap:wrap;
}

/*菜单部分*/

.menuv {
  height: 190rpx;
  text-align: center;
  display: table-column;
  padding-top: 18rpx;
}

.menuico {
  width: 110rpx;
  height: 110rpx;
}

.menutxt {
  width: 100%;
}

/*横滑内容部分*/

.contentv {
  background-color: #fff;  
  padding-top: 40rpx;
}

.tab-contentv {
  padding-left:2%; 
  overflow: hidden;
  white-space: nowrap;
  display: flex;
  width:98%; 
}

