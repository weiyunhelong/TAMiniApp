  line-height: 80rpx;
}

.chktabitem3 {
  text-align: center;
  height: 75rpx;
  display: inline-block;
  border-bottom: 5rpx solid #53c078;
  color: #53c078;
  font-weight: bold;
  box-sizing: content-box;
  line-height: 80rpx;
}

.chktabitem4 {
  text-align: center;
  height: 75rpx;
  display: inline-block;
  border-bottom: 5rpx solid #8f53c0;
  color: #8f53c0;
  font-weight: bold;
  box-sizing: content-box;
  line-height: 80rpx;
}

/*未选中的菜单*/

.nochktabitem {
  text-align: center;
  height: 80rpx;
  line-height: 80rpx;
  color: #16191c;
  display: inline-block;
}

.filtericon {
  width: 40rpx;
  height: 40rpx;
  margin-top: 20rpx;
}

.shadowv {
  width: 100%;
  height: 20rpx;
  background: linear-gradient(180deg, rgba(209, 209, 209, 1), rgba(216, 216, 216, 0));
  opacity: 0.8;
}

/*筛选部分*/

.filterv {
  margin: 0 38rpx 50rpx 38rpx;
}

.filtertitle {
  font-size: 26rpx;
  color: #000;
  font-weight: bold;
}

.filterlist {
  display: flex;
  flex-wrap: wrap;
}

.filteritem {
  padding: 5rpx 30rpx;
  background-color: #f2f2f2;
  color: #000;
  font-size: 24rpx;
  text-align: center;
  line-height: 50rpx;
  margin: 20rpx 20rpx 0 0;
  border-radius: 4rpx;
}

.filteritemh {
  padding: 5rpx 30rpx;
  background-color: #0074c8;
  color: #fff;
  font-size: 24rpx;
  text-align: center;
  line-height: 50rpx;
  margin: 20rpx 20rpx 0 0;
  border-radius: 4rpx;
}

/*底部的操作按钮*/
.bottomopv{
  width: 100%;
  height: 100rpx;
}
.bottomopt {
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 2;
  display: flex;
  justify-content: space-around;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  border-top: 1rpx solid #f2f2f2;
  font-size: 28rpx;
  background-color: #fff;
}

