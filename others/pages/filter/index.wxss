/* others/pages/filter/index.wxss */

page {
  background-color: #fff;
}

/*顶部行*/

.topv {
  width: 100%;
  background-color: #fff;
  padding: 25rpx 0 0 0;
  border-top: 2rpx solid #ebebeb;
  position: fixed;
  z-index: 2;
  left: 0;
  top: 0;
}

/*搜索层*/

.searchv {
  width: 97%;
  height: 68rpx;
  margin-left: 3%;
  display: flex;
  justify-content: flex-start;
}

.searchview {
  width: 90%;
  height: 68rpx;
  background-color: #fff;
  border-radius: 40rpx;
  display: flex;
  justify-content: flex-start;
}

.searchhborder {
  border: 1rpx solid #0074c8;
  box-sizing: content-box;
}

.searchborder {
  border: 1rpx solid #b2b2b2;
  box-sizing: content-box;
}

.searchicon {
  margin: 18rpx 10rpx;
}

.txtcss {
  width: 83%;
  height: 68rpx;
  line-height: 68rpx;
  padding-left: 5%;
}

.tipcss {
  color: #b2b2b2;
}

.clearicon {
  margin: 15rpx 15rpx;
}

.cleartxt {
  width: 15%;
  text-align: center;
  line-height: 80rpx;
}

.dituicon {
  width: 42rpx;
  height: 34rpx;
  margin: 20rpx 20rpx;
}

.listicon {
  width: 42rpx;
  height: 42rpx;
  margin: 16rpx 20rpx;
}

/*菜单部分*/

.tabmenuv {
  height: 80rpx;
  overflow: hidden;
  white-space: nowrap;
  background-color: #fff;
  display: flex;
  margin: 20rpx 20rpx 0rpx 20rpx;
  justify-content: space-between;
  box-sizing: content-box;
  line-height: 100rpx;
}

.ttabitemv {
  text-align: center;
  height: 80rpx;
  line-height: 85rpx;
  display: inline-block;
  width: 22%;
}

.ftabitemv {
  width: 7%;
}

/*选中的菜单*/

.chktabitem1 {
  text-align: center;
  height: 75rpx;
  display: inline-block;
  border-bottom: 5rpx solid #0074c8;
  color: #0074c8;
  font-weight: bold;
  box-sizing: content-box;
  line-height: 80rpx;
}

.chktabitem2 {
  text-align: center;
