<!--others/pages/guide/index.wxml-->

<view class='topv'>
  <!--搜索行-->
  <view class='searchv'>
    <view class="searchview {{issearchfocus?'searchhborder':'searchborder'}}">
      <input type='text' placeholder='搜索' placeholder-class='tipcss' class='txtcss' value='{{searchtxt}}' bindfocus='searchfopt' bindblur='getsearchtxt' bindconfirm='getsearchtxt'></input>
      <icon type="search" size="20" color="{{issearchfocus?'#0074C8':'#B2B2B2'}}" class='searchicon' />
    </view>
  </view>

  <!--tab层-->
  <scroll-view scroll-x="true" class="tab-h" scroll-left="{{scrollLeft}}">
    <block wx:for="{{tablist}}" wx:key="item" wx:for-index="x">
      <view class="tabitem">
        <view class="{{currentTab==x?'chktabitem':'nochktabitem'}}" data-id="{{item.id}}" bindtap="switchNav">{{item.name}}</view>
      </view>
    </block>
  </scroll-view>

  <!--过渡行-->
  <view class='guoduv'></view>

  <!--filter行-->
  <view class='filterv'>
    <view class="{{filterchk==1?'filteritemh':'filteritem'}}" bindtap='filteropt' data-id='1'>热门排序</view>
    <view class='filterxian'></view>
    <view class="{{filterchk==2?'filteritemh':'filteritem'}}" bindtap='filteropt' data-id='2'>时间排序</view>
  </view>

</view>

<!--列表部分-->
<view class='listv'>
  <block wx:for="{{guidelist}}" wx:key="item">
  <!--列表信息-->
  <view class='listitemv' bindtap='godetail' data-id='{{item.id}}' data-type='{{item.typeval}}' data-title='{{item.title}}'>
     <!--图片部分-->
     <view class='listtuv'>
       <image src='{{item.imgpath}}' class='listtu'></image>
       <view class='listtypev1' wx:if="{{item.typeval==1}}">线路</view>
       <view class='listtypev2' wx:if="{{item.typeval==2}}">游记</view>
       <view class='listtypev3' wx:if="{{item.typeval==3}}">攻略</view>
     </view>
     <!--文字介绍-->
     <view class='listinfov'>
       <view class='listtitle'>{{item.title}}</view>
       <view class='listinfo'>{{item.instro}}</view>
       <view class='numv'>
         <view class='collectnum'>{{item.collectnum}}收藏</view>
         <view class='collectnum'>{{item.viewnum}}浏览</view>
       </view>
     </view>
     <!--收藏-->
     <view class='listxinv' catchtap='collectopt' data-id='{{item.id}}'>
       <image src='/resources/icon/hubxinh.png' class='xinicon' wx:if="{{item.iscollect}}"></image>
       <image src='/resources/icon/hubxin.png' class='xinicon' wx:if="{{!item.iscollect}}"></image>
     </view>
  </view>
  <view class='geduanv'></view>
</block>
</view>