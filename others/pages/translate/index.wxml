<!--others/pages/translate/index.wxml-->

<!--顶部的翻译类型-->
<view class='topv'>
  <view class='origintxt'>{{origintype}}</view>
  <image src='/resources/change.png' class='changeico' bindtap='changeopt'></image>
  <view class='gogaltxt'>{{gogaltype}}</view>
  <image src='/resources/xiangji.png' class='xiangjiico' bindtap='chkimgopt'></image>
</view>

<!--输入源语言-->
<view class='originv'>
  <textarea class='otxtcss' placeholder-class='otipcss' placeholder='请输入翻译的内容' value='{{origintxt}}' bindblur='getorigintxt' bindconfirm='getorigintxt' maxlength='-1'></textarea>
</view>

<view class='tiptxt'>实时译文</view>

<!--输出结果-->
<view class='gogalv'>
  <textarea class='gtxtcss' value='{{gogaltxt}}' maxlength='-1' disabled='true'></textarea>
</view>