  width: 100%;
  height: 100%;
}

.swiperitem .wx-swiper-dots.wx-swiper-dots-horizontal {
  margin-bottom: 2rpx;
}

.swiperitem .wx-swiper-dot {
  width: 120rpx;
  display: inline-flex;
  height: 1rpx;
  margin-left: 5rpx;
  justify-content: space-between;
}

.swiperitem .wx-swiper-dot::before {
  content: '';
  flex-grow: 1;
  background: rgba(255, 255, 255, 0.05);
  border-radius: 8rpx;
}

.swiperitem .wx-swiper-dot-active::before {
  background: #fff;
}

